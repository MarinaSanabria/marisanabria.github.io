---
import type { LogoItem } from '../../../data/logos';

interface Props { tools: LogoItem[]; speedMs?: number; }
const { tools = [] } = Astro.props as Props;
---

<div class="mx-auto max-w-6xl px-4 py-6">
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6 items-center justify-center">
    {tools.map((tool) => (
      <div class="flex flex-col items-center justify-center p-4 rounded-md">
        <div class="w-16 h-16 mb-2 flex items-center justify-center">
          <img src={tool.logo} alt={tool.name} width="64" height="64" class="w-full h-full object-contain transition duration-300 hover:scale-110 dark:opacity-100" />
        </div>
        <span class="text-sm font-semibold text-[color:var(--color-text-muted)] text-center">{tool.name}</span>
      </div>
    ))}
  </div>
</div>


